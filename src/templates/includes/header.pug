mixin menu-item(href, name)
  li.menu__item
    a.menu__link(href=href)= name
    block

mixin menu(items)
  ul.menu&attributes(attributes)
    each item in items
      +menu-item(item.href, item.name)
        if item.submenu
          +submenu(item.submenu)

mixin submenu(items)
  ul.submenu
    for item in items
      +submenu-item(item.href, item.name)

mixin submenu-item(href, name)
  li.submenu__item
    a.submenu__link(href=href)= name

mixin socials-item(href, socialsClass, { linkClass = '' } = {})
  li.socials__item
    if block
      block
    else
      a.socials__link.brand-link(href=href class=linkClass)
        i(class=socialClass aria-hidden='true')

mixin socials(items, { linkClass = '', searchBtnClass = '' } = {})
  .socials&attributes(attributes)
    ul.socials__list
      each item in items
        +socials-item(item.href, item.socialsClass, { linkClass })

      +socials-item
        button.socials__link.brand-link.search-btn(href='#' class=searchBtnClass)
          i.fa.fa-search.search-btn__search-icon(aria-hidden='true')
          i.fa.fa-times.search-btn__close-icon(aria-hidden='true')

header#header.header
  .container.header__inner.navbar.navbar-expand-lg
    .header__mobile-group
      #menuBurger.burger.header__burger(
        data-toggle='collapse'
        data-target='#mainNav'
        aria-controls='mainNav'
        aria-expanded='false'
        aria-label='Toggle navigation'
      )
        span.burger__stick
        span.burger__stick
        span.burger__stick

      a.logo.mx-auto.header__logo(href='/')
        img.logo__img(
          width='100'
          src='imgs/logo.svg'
          alt='Site logo'
        )

    a#mobileSearchBtn.header__mobile-search-btn.search-btn(href='#')
      img.search-btn__search-icon(src='/imgs/icons/search.svg')
      include close-icon.pug

    nav#mainNav.header__nav.collapse.navbar-collapse
      +menu(mainMenu)(id="mainMenu" class='sm header__menu')

    - const socialsOptions = { linkClass: 'header__socials-link', searchBtnClass: 'header__search-btn' };
    +socials(socials, socialsOptions)(class="header__socials")
